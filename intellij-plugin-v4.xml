  <property name="project.jdk.classpath" value="jdk.classpath.intellij_idea_community_edition_ic-133.snapshot"/>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module intellij-plugin-v4 -->
  
  <dirname property="module.intellij-plugin-v4.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.intellij-plugin-v4" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.intellij-plugin-v4" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.intellij-plugin-v4" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.intellij-plugin-v4" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="intellij-plugin-v4.output.dir" value="${module.intellij-plugin-v4.basedir}/out/production/intellij-plugin-v4"/>
  <property name="intellij-plugin-v4.testoutput.dir" value="${module.intellij-plugin-v4.basedir}/out/test/intellij-plugin-v4"/>
  
  <path id="intellij-plugin-v4.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="intellij-plugin-v4.module.production.classpath">
    <path refid="${module.jdk.classpath.intellij-plugin-v4}"/>
    <pathelement location="${basedir}/lib/antlr-4.5.1-complete.jar"/>
  </path>
  
  <path id="intellij-plugin-v4.runtime.production.module.classpath">
    <pathelement location="${intellij-plugin-v4.output.dir}"/>
    <pathelement location="${basedir}/lib/antlr-4.5.1-complete.jar"/>
  </path>
  
  <path id="intellij-plugin-v4.module.classpath">
    <path refid="${module.jdk.classpath.intellij-plugin-v4}"/>
    <pathelement location="${intellij-plugin-v4.output.dir}"/>
    <pathelement location="${basedir}/lib/antlr-4.5.1-complete.jar"/>
  </path>
  
  <path id="intellij-plugin-v4.runtime.module.classpath">
    <pathelement location="${intellij-plugin-v4.testoutput.dir}"/>
    <pathelement location="${intellij-plugin-v4.output.dir}"/>
    <pathelement location="${basedir}/lib/antlr-4.5.1-complete.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.intellij-plugin-v4">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.intellij-plugin-v4">
    <patternset refid="excluded.from.module.intellij-plugin-v4"/>
  </patternset>
  
  <path id="intellij-plugin-v4.module.sourcepath">
    <dirset dir="${module.intellij-plugin-v4.basedir}">
      <include name="resources/icons"/>
      <include name="src/grammars"/>
      <include name="src/java"/>
      <include name="resources/templates"/>
      <include name="src/adaptor"/>
      <include name="resources/liveTemplates"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.intellij-plugin-v4" depends="compile.module.intellij-plugin-v4.production,compile.module.intellij-plugin-v4.tests" description="Compile module intellij-plugin-v4"/>
  
  <target name="compile.module.intellij-plugin-v4.production" depends="register.custom.compilers" description="Compile module intellij-plugin-v4; production classes">
    <mkdir dir="${intellij-plugin-v4.output.dir}"/>
    <javac2 destdir="${intellij-plugin-v4.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.intellij-plugin-v4}/javac">
      <compilerarg line="${compiler.args.intellij-plugin-v4}"/>
      <bootclasspath refid="intellij-plugin-v4.module.bootclasspath"/>
      <classpath refid="intellij-plugin-v4.module.production.classpath"/>
      <src refid="intellij-plugin-v4.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.intellij-plugin-v4"/>
    </javac2>
    
    <copy todir="${intellij-plugin-v4.output.dir}">
      <fileset dir="${module.intellij-plugin-v4.basedir}/resources/icons">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/src/grammars">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/resources/templates">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/src/adaptor">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/resources/liveTemplates">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.intellij-plugin-v4.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.intellij-plugin-v4.tests" depends="register.custom.compilers,compile.module.intellij-plugin-v4.production" description="compile module intellij-plugin-v4; test classes" unless="skip.tests"/>
  
  <target name="clean.module.intellij-plugin-v4" description="cleanup module">
    <delete dir="${intellij-plugin-v4.output.dir}"/>
    <delete dir="${intellij-plugin-v4.testoutput.dir}"/>
  </target>
  
  <property name="intellij-plugin-v4.plugin.path.jar" value="${module.intellij-plugin-v4.basedir}/intellij-plugin-v4.zip"/>
  
  <!-- Build archive for plugin 'intellij-plugin-v4' -->
  <target name="plugin.build.jar.intellij-plugin-v4" depends="compile.module.intellij-plugin-v4" description="Build plugin archive for module &#39;intellij-plugin-v4&#39;">
    <property name="tmp.dir.intellij-plugin-v4" value="${module.intellij-plugin-v4.basedir}/../temp"/>
    <mkdir dir="${tmp.dir.intellij-plugin-v4}"/>
    <mkdir dir="${tmp.dir.intellij-plugin-v4}/lib"/>
    <jar destfile="${tmp.dir.intellij-plugin-v4}/lib/intellij-plugin-v4.jar" duplicate="preserve">
      <zipfileset dir="${module.intellij-plugin-v4.basedir}/out/production/intellij-plugin-v4"/>
      <zipfileset file="${module.intellij-plugin-v4.basedir}/META-INF/plugin.xml" prefix="META-INF"/>
      <manifest>
        <attribute name="Created-By" value="IntelliJ IDEA"/>
        <attribute name="Manifest-Version" value="1.0"/>
      </manifest>
    </jar>
    <copy file="${module.intellij-plugin-v4.basedir}/lib/antlr-4.5.1-complete.jar" tofile="${tmp.dir.intellij-plugin-v4}/lib/antlr-4.5.1-complete.jar"/>
    <zip destfile="${intellij-plugin-v4.plugin.path.jar}">
      <fileset dir="${module.intellij-plugin-v4.basedir}/../temp"/>
    </zip>
    <delete dir="${tmp.dir.intellij-plugin-v4}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.intellij-plugin-v4" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, plugin.build.jar.intellij-plugin-v4" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>